// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id         Int             @id @default(autoincrement())
  name       String
  password   String
  email      String          @unique
  phone      String?         @unique
  address    String?
  role       ROLE            @default(USER)
  created_at DateTime        @default(now())
  updated_at DateTime        @updatedAt
  comments   apato_comment[]
}

enum ROLE {
  ADMIN
  USER
  SELLER
}

model apato {
  id           Int             @id @default(autoincrement())
  title        String
  address      String
  image        String[]
  rating       Int?
  price        Int
  detail       String
  total_rating Float
  comments     apato_comment[]
}

model apato_comment {
  id      Int    @id @default(autoincrement())
  apato   apato? @relation(fields: [apatoId], references: [id])
  apatoId Int?
  user    user?  @relation(fields: [userId], references: [id])
  userId  Int?
  comment String
  rating  Int
}
